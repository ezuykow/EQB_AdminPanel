<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://teamListView.title"
      focusComponent="teamsDataGrid">
    <data readOnly="true">
        <collection id="teamsDc"
                    class="ru.ezuykow.eqbadminpanel.entity.Team">
            <fetchPlan extends="_base">
                <property name="preparedGame" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="teamsDl">
                <query>
                    <![CDATA[select e from Team e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="teamsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <simplePagination id="pagination" dataLoader="teamsDl"/>
        </hbox>
        <dataGrid id="teamsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="teamsDc">
            <actions>
            </actions>
            <columns>
                <column property="name"/>
                <column property="preparedGame"/>
                <column property="chatId"/>
                <column property="questionAnswered"/>
                <column property="hintsUsed"/>
                <column property="place"/>
                <column property="lastQuestionAnsweredAt"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>